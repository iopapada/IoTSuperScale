<UserControl
    x:Class="IoTSuperScale.IoTControls.NumericSpinner"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Height="50" Width="180" Loaded="UserControl_Loaded" VerticalAlignment="Top" HorizontalAlignment="Left">

    <Grid>
        <TextBox x:Name="txtValue" BorderThickness="2" BorderBrush="Black" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Width="70" Height="50" Text="1" FontSize="32" FontFamily="Calibri" Margin="0,0,0,0"/>
        <Button x:Name="btnUp" BorderThickness="2" BorderBrush="Black" Content="" HorizontalAlignment="Left" Margin="68,0,0,0" VerticalAlignment="Top" Width="112" Height="26" Click="ΒtnUp_Click">
            <Button.Background>
                <ImageBrush ImageSource="ms-appx:///Assets/Up.png" Stretch="None"/>
            </Button.Background>
        </Button>
        <Button x:Name="btnDown" BorderThickness="2" BorderBrush="Black" Content="" HorizontalAlignment="Left" Margin="68,24,0,0" VerticalAlignment="Top" Width="112" Height="26" Click="ΒtnDown_Click">
            <Button.Background>
                <ImageBrush Stretch="None" ImageSource="ms-appx:///Assets/Down.png"/>
            </Button.Background>
        </Button>
    </Grid>
</UserControl>

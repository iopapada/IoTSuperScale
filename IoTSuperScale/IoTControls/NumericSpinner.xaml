<UserControl
    x:Class="IoTSuperScale.IoTControls.NumericSpinner"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Height="49.816" Width="178" Loaded="UserControl_Loaded">

    <Grid BorderBrush="Black" BorderThickness="2">
        <TextBox x:Name="txtValue" BorderThickness="0" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Width="74" Height="46" Text="1" FontSize="32" FontFamily="Calibri" Margin="0,0,0,0"/>
        <Button x:Name="btnUp" Content="" HorizontalAlignment="Left" Margin="76,0,0,0" VerticalAlignment="Top" Width="102" Height="24" Click="btnUp_Click">
            <Button.Background>
                <ImageBrush ImageSource="ms-appx:///Assets/Up.png" Stretch="None"/>
            </Button.Background>
        </Button>
        <Button x:Name="btnDown" Content="" HorizontalAlignment="Left" Margin="76,26,0,0" VerticalAlignment="Top" Width="102" Height="24" Click="btnDown_Click">
            <Button.Background>
                <ImageBrush Stretch="None" ImageSource="ms-appx:///Assets/Down.png"/>
            </Button.Background>
        </Button>

    </Grid>
</UserControl>

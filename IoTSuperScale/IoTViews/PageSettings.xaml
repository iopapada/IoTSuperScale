        <TextBox x:Name="txtBoxIPServer" Style="{StaticResource BaseTextBoxStyle}" Margin="391,128,0,0" Text="" Width="185" LostFocus="txtboxIPServer_LostFocus" HorizontalAlignment="Left" VerticalAlignment="Top"/>

